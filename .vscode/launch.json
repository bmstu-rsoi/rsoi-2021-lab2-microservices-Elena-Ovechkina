    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Tests",
            "program": "${workspaceFolder}/agregator/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "--exit",
                "${workspaceFolder}\\agregator\\test\\*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\agregator\\app.js"
        }
    ]
}